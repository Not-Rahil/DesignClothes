<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShirtActivity">


    <ImageView
        android:id="@+id/shirtback"
        android:layout_width="115dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/staticShirt"
        app:layout_constraintEnd_toEndOf="@+id/staticShirt"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/staticShirt"
        app:layout_constraintTop_toTopOf="@+id/staticShirt"
        app:layout_constraintVertical_bias="0.059"
        app:srcCompat="@drawable/ic_shirtback"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/leftPart"
        android:layout_width="221dp"
        android:layout_height="328dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/staticShirt"
        app:layout_constraintEnd_toEndOf="@id/staticShirt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/staticShirt"
        app:layout_constraintTop_toTopOf="@+id/staticShirt"
        app:layout_constraintVertical_bias="0.606"
        app:srcCompat="@drawable/ic_leftpart"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/rightPart"
        android:layout_width="218dp"
        android:layout_height="329dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/staticShirt"
        app:layout_constraintEnd_toEndOf="@+id/staticShirt"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/staticShirt"
        app:layout_constraintTop_toTopOf="@+id/staticShirt"
        app:layout_constraintVertical_bias="0.62"
        app:srcCompat="@drawable/ic_rightpart"
        tools:ignore="VectorDrawableCompat" />


    <ImageView
        android:id="@+id/collarshirtleft"
        android:layout_width="135dp"
        android:layout_height="84dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/staticShirt"
        app:layout_constraintEnd_toEndOf="@+id/staticShirt"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="@+id/staticShirt"
        app:layout_constraintTop_toTopOf="@+id/staticShirt"
        app:layout_constraintVertical_bias="0.132"
        app:srcCompat="@drawable/ic_collarshirt"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/collarshirtright"
        android:layout_width="123dp"
        android:layout_height="84dp"
        android:layout_marginTop="8dp"
        android:scaleX="-1"
        app:layout_constraintBottom_toBottomOf="@+id/staticShirt"
        app:layout_constraintEnd_toEndOf="@+id/staticShirt"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="@+id/staticShirt"
        app:layout_constraintTop_toTopOf="@+id/staticShirt"

        app:layout_constraintVertical_bias="0.132"
        app:srcCompat="@drawable/ic_collarshirt"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/staticShirt"
        android:layout_width="402dp"
        android:layout_height="417dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/shirt" />

</android.support.constraint.ConstraintLayout>